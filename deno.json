{
  "nodeModulesDir": "auto",
  "version": "0.0.0",
  "workspace": [
    "./client",
    "./modules/auth",
    "./modules/principal",
    "./modules/tenant",
    "./platform/config",
    "./platform/database",
    "./platform/logger",
    "./platform/relay",
    "./platform/server",
    "./server"
  ],
  "imports": {
    "@modules/auth": "./modules/auth/mod.ts",
    "@modules/principal": "./modules/principal/mod.ts",
    "@modules/tenant": "./modules/tenant/mod.ts",
    "@platform/config": "./platform/config/mod.ts",
    "@platform/database": "./platform/database/mod.ts",
    "@platform/logger": "./platform/logger/mod.ts",
    "@platform/relay": "./platform/relay/mod.ts",
    "@platform/server": "./platform/server/mod.ts",
    "@valkyr/iam": "./client/mod.ts"
  },
  "tasks": {
    "start": {
      "command": "deno run -A --watch ./server/start.ts",
      "description": "Starts the IAM service enabling API access to its functionality."
    },
    "migrate": {
      "command": "deno run -A ./server/migrate.ts",
      "description": "Runs data migrations on the configured database."
    },
    "rollback": {
      "command": "deno run -A ./server/rollback.ts",
      "description": "Runs data rollback on the configured database."
    },
    "check": {
      "command": "deno run -A npm:@biomejs/biome check --write .",
      "description": "Format, lint, and organize imports of the entire repository."
    },
    "test": {
      "command": "deno test --allow-all",
      "description": "Runs all defined tests across the entire repository."
    }
  }
}
