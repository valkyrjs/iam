{
  "nodeModulesDir": "auto",
  "workspace": [
    "./client",
    "./modules/auth",
    "./modules/tenant",
    "./platform/config",
    "./platform/database",
    "./platform/logger",
    "./platform/relay",
    "./platform/request",
    "./platform/server",
    "./platform/utilities",
    "./platform/value-object",
    "./server"
  ],
  "imports": {
    "@std/dotenv": "jsr:@std/dotenv@0.225.5",
    "@std/fs": "jsr:@std/fs@1.0.19",
    "@std/path": "jsr:@std/path@1.1.2",
    "@types/node": "npm:@types/node@24.2.0",
    "@valkyr/event-store": "jsr:@valkyr/event-store@2.0.2",
    "@valkyr/json-rpc": "jsr:@valkyr/json-rpc@^1.1.0",
    "zod": "jsr:@zod/zod@4.1.12"
  },
  "exclude": [".bruno", ".github", ".vscode"],
  "publish": {
    "exclude": [".bruno", ".github", ".vscode", ".gitignore"]
  },
  "tasks": {
    "start": {
      "command": "deno run -A --watch ./server/start.ts",
      "description": "Starts the IAM service enabling API access to its functionality."
    },
    "migrate": {
      "command": "deno run -A ./server/migrate.ts",
      "description": "Runs data migrations on the configured database."
    },
    "rollback": {
      "command": "deno run -A ./server/rollback.ts",
      "description": "Runs data rollback on the configured database."
    },
    "biome": {
      "command": "deno run -A npm:@biomejs/biome check --write .",
      "description": "Format, lint, and organize imports of the entire repository."
    },
    "check": {
      "command": "deno check .",
      "description": "Runs deno check across the entire repository."
    },
    "test": {
      "command": "deno test --allow-all",
      "description": "Runs all defined tests across the entire repository."
    }
  }
}
